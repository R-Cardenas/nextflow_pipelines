singularity {
  enabled = true
  runOptions = "--home $baseDir --bind /gpfs/afm/cg_pipelines/Pipelines/singularity/genomes:/var/spool/mail"
}

process {
    withName:haplotypeCaller {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '100 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:sam_sort {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/picard_sam_bcf_freebayes_mkdir_vcftools.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:picard_pcr_removal {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/picard_sam_bcf_freebayes_mkdir_vcftools.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:rename_bam {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/picard_sam_bcf_freebayes_mkdir_vcftools.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:cgpMAP {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/cgpmap_3.0.0.img'
        executor = 'lsf'
        memory = '60 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:FastP {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/fastp.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:BaseRecalibrator {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '50 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:applyBaseRecalibrator {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '50 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:bam_index {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/picard_sam_bcf_freebayes_mkdir_vcftools.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:multiqc {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/multiqc.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }
    withName:CNNscoreVariants {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '50 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:FilterVariantTranches {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '50 GB'
        queue = 'short-ib'
        cpus = 15
    }
    withName:IndexFeatureFile {
        container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/gatk4_4.1.0.0.img'
        executor = 'lsf'
        memory = '32 GB'
        queue = 'short-eth'
        cpus = 5
    }

}
